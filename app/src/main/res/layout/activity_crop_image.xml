<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/crop_view_action"
        android:background="@color/crop_background">

        <com.img.crop.glsrender.gl11.GLRootView
            android:id="@+id/gl_root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/gl_root_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/crop_background" />
    </FrameLayout>

    <include
        android:id="@+id/crop_view_action"
        layout="@layout/layout_crop_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cropimage_cropratio_height"
        android:layout_alignParentBottom="true" />
</RelativeLayout>